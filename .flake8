[flake8]
max-complexity = 14
inline-quotes = double
multiline-quotes = """ 
builtins = _
verbose = 2
max-line-length = 120

# Files and folders ignore list
# -----------------------------
# Add comments for all ignored files and folders to justify the common standard violation
exclude = 
          # Git internal folder
          .git,
          # Python temporary files
          __pycache__,
          # External dependencies
          venv
          # C library. There is no need to check it with flake8
          urpc/builder/library/resources/vendor/liburpc

